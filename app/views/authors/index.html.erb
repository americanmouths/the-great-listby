<h2>Authors</h2>
<% @authors.all.each do |author| %>
  <li id="title-<%= author.id %>"></li>
  <div id="body-<%= author.id %>"></div>
  <div id="author_link">
    <%= link_to "More about the author", author_path(author.id), class: "author_show" %>
  </div>
  <button class="js-more" data-id="<%= author.id %>">Books By This Author</button>
<% end %>
