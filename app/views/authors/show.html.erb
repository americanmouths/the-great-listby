<div id="authorShow">
<h2>Books by
  <div id="authorName"></div>
  <div id="htmlAuthorName"><u><%= @author.name %></u></div>
</h2>
</div>

<div id="htmlAuthorBooks">
  <ol>
  <% @author.books.each do |book| %>
      <li><%= link_to book.title, book_path(book.id) %></li>
  <% end %>
  </ol>
</div>

<div id="authors_books">
</div>

<a href="#" class="js-next" data-id="<%= @author.id %>"> Next Author</a>
