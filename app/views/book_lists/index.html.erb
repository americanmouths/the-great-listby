<h2>Your Current Book Lists</h2>
<% if @booklists.present? %>
  <% @booklists.each do |book_list| %>
    <h3>Title: <%= link_to book_list.title, book_list_path(book_list) %></h3>
    Books on this list:
    <ol>
      <% book_list.books.each do |book| %>
        <li><%= link_to book.title, book_path(book) %></li>
        Status: <%= book.book_features.find_by(book_list_id: book_list.id).status %><br><br>
      <% end %>
    </ol>
  <% end %>
<% else %>
  <%= link_to "Get started by creating a book list", new_book_list_path %>
<% end %>
