<%= render partial: 'errors', locals: {book: @book} %>

<h1>Update the status of: "<%= @book.title %>"</h1>
<strong>Title: </strong><%= @book.title %><br>
<strong>Blurb: </strong><%= @book.blurb %><br>
<strong>Genre: </strong><%= @book.genre_name %><br>
<strong>Author: </strong><%= @book.author_name %><br><br>

<%= form_for @book do |f| %>
  <strong><%= f.label "Change the status:" %></strong><br>
  <%= f.select :book_features, [["Currently reading"], ["Already read"], ["Want to read"]]%><br><br>

  <%= f.hidden_field :book_list_id, :value => @booklist.id %>
  <%= f.submit %>
<% end %>
