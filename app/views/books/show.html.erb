<h1><strong><%= @book.title %></strong></h1>
<h3>It's About:</h3>
<p><%= @book.blurb %></p>
<h3>Author:</h3>
<p><%= link_to @book.author.name, author_path(@book.author) %></p>
<h3>Genre:</h3>
<p><%= link_to @book.genre.name, genre_path(@book.genre) %></p>
<h3>Book List:</h3>
<% @book.book_lists.each do |book_list| %>
  <%= link_to book_list.title, book_list_path(book_list) %><br>
<% end %>
<h3>Reviews:</h3>
<% @book.reviews.each do |review| %>
  <%= link_to review.title, book_review_path(@book.id) %>
<% end %>
<h3>Add A Review:</h3>
<%= link_to "Add A Review", new_book_review_path(@book.id) %>
