<%= form_for book do |f| %>
  <%= f.collection_check_boxes :book_list_ids, user.book_lists, :id, :title, :checked => false, :include_hidden => false do |b| %>
    <%= b.check_box %><%= b.label %><br>
  <% end %>
  <br>

  <%= f.label "Status " %><br>
  <%= f.select :book_features, [["Currently reading"], ["Already read"], ["Want to read"]]%><br><br>

  <%= f.submit "Add to this booklist"%>
<% end %>
